<%- include('./layout/header.ejs'); %>
    <header class="main-header " style="background-image: url(../img/intro.jpg)">
        <div class="vertical">
            <div class="main-header-content inner">
                <h1 class="page-title">Fashion Critiques</h1>
                <div class="entry-title-divider">
                    <span></span><span></span><span></span>
                </div>
                <h2 class="page-description">Thoughts, reviews and ideas since 1999.</h2>
            </div>
        </div>
        <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
    </header>
    <main id="content" class="content" role="main">
        <div class="wraps">
            <img src="../img/shadow.png" class="wrapshadow">
            <div class="grid">
                <% for(var i = users.length-1; i >= 0; i--) { %>
                    <div class="grid-item">
                        <article class="post tag-romance">
                            <a href="/single-post/<%= users[i].id %>"><img src="../photos/<%= users[i].blogPhoto %>"></a>
                            <div class="wrapgriditem">
                                <header class="post-header">
                                    <h2 class="post-title">
                                        <a href="/single-post/<%= users[i].id %>">
                                            <%= users[i].title %>
                                        </a>
                                    </h2>
                                </header>
                                <section class="post-excerpt">
                                    <p>
                                        <%= users[i].desTitle %> <a class="read-more" href="/single-post/<%= users[i].id %>">&raquo;</a>
                                    </p>
                                </section>
                                <footer class="post-meta">
                                    <a href="author.html">
                                        <%= users[i].user %>
                                            <time class="post-date" datetime="2016-12-18"><%= users[i].date %></time>
                                </footer>
                            </div>
                        </article>
                    </div>
                    <% } %>
            </div>
        </div>
    </main>
    <%- include('./layout/footer.ejs'); %>